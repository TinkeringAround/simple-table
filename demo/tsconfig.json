{
  "compilerOptions": {
    "module": "ESNext",                
    "moduleResolution": "Node",         
    "target": "esnext",               
    "declaration": true,        
    "outDir": "./lib",             
    "strict": true,      
    "allowSyntheticDefaultImports": true,   
    "esModuleInterop": true,              
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,              
    "resolveJsonModule": true,              
    "noImplicitAny": true                 
  },
  "include": ["src"],             
  "exclude": ["node_modules", "lib", "dist"] 
}
